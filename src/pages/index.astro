---
import { getCollection } from 'astro:content'
import Layout from '../components/Layout.astro'

const notes = await getCollection('notes')
---

<Layout>
  <div class='banner'>
    <img class='chibi' src='chibi.webp' alt='' height='200' width='160' />
    <h1 class='title'>I'm Sacha<sup>(they/any)</sup></h1>
  </div>
  <p class='description'>
    Here should be some desccription for this small internet place.
    And hopefully a better navigation.
  </p>
  <ul>
    {notes.map(note => <li><a href={`/${note.id}`}>{note.data.title}</a></li>)}
  </ul>
</Layout>

<style>
.chibi {
  margin: 0 auto var(--space-s);
}

.title {
  text-align: center;
}
</style>
